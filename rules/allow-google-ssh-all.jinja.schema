info:
  title: Allow Google SSH All Rule
  author: John McKenna
  description: Creates a firewall rule to allow Google's IP space to ssh to instances.
  version: 1.0

imports:
- name: firewall.jinja
  path: ../cdm-templates/resources/firewall.jinja

required:
- network

network:
  type: string
  default: internal
  description: The network in the Google Cloud project that rule will apply to.
