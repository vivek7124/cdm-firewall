resources:
- name: allow-cassandra-cassandra
  type: firewall.jinja
  properties:
    network: {{ properties["network"] }}
    sourceTags: ["cassandra"]
    targetTags: ["cassandra"]
    allowed:
      - IPProtocol: TCP
        ports: [ 7000 ]
      - IPProtocol: TCP
        ports: [ 9042 ]
      - IPProtocol: TCP
        ports: [ 7199 ]
      - IPProtocol: TCP
        ports: [ 9160 ]
