info:
  title: Allow Cassandra Cassandra Rule
  author: John McKenna
  description: Creates a firewall rule to allows Cassandra servers to reach each other.
  version: 1.0

imports:
- name: firewall.jinja
  path: ../cdm-templates/resources/firewall.jinja

required:
- network

network:
  type: string
  default: internal
  description: The network in the Google Cloud project that rule will apply to.
